<%= form_with(model: @problem, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :ProductID %>
  <%= f.text_field :ProductID, class: 'form-control' %>
  
  <%= f.label :ProductName %>
  <%= f.text_field :ProductName, class: 'form-control' %>

  <%= f.label :Detected_at %>
  <%= f.text_field :Detected_at, class: 'form-control', placeholder: "Please follow the format 20200101" %>
  
  <div class="field">
    <%= f.text_area :Description, placeholder: "Compose new problem..." %>
  </div> 
  
  <%= f.label :BoL %>
  <%= f.text_field :BoL, class: 'form-control', placeholder: "Please only input 'Component' or 'BL'" %>
  
  <%= f.label :Status %>
  <%= f.text_field :Status, class: 'form-control',placeholder: "Please input Open or Close" %>
  
  <%= f.label :link %>
  <%= f.text_field :link, class: 'form-control',placeholder: "Please input the full CR link here" %>
  
  <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %> 

