<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="problem_form">
        <%= render 'shared/problem_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Problems List</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
  <% else %>

  <div class="center jumbotron">
    <h1>Schneider Electric Quality Department</h1>
    <p>
      If you have a problem, please <a href= login > >Report</a>
    </p>
  </div>
<% end %>