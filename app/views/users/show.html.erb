<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.problems.any? %>
      <h3>Problems (<%= @user.problems.count %>)</h3>
      <table width=100%>
        <th width=10%>CR Date</th>
        <th width=10%>CR Link</th>
        <th width=10%>Product</th>
        <th>Description</th>
        <th width=15%>Operation</th>
      </table>
      <ol class="problems">
        <%= render @problems %>
      </ol>
      <%= will_paginate @problems %>
    <% end %>
  </div>
</div>